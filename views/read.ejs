<h1>Insert something into mongo</h1>
<form method="POST" action="/insert" style="display: inline-block">
  <label for="title">Title:</label>
  <input id="title" name="title" required><br>
  <label for="genre">Genre:</label>
  <input id="genre" name="genre" required><br>
  <label for="rating">Rating:</label>
  <input id="rating" name="rating" required><br>
  <label for="platform">Platform:</label>
  <input id="platform" name="platform" required><br>
  <label for="watched">Watched:</label>
  <input id="watched" name="watched" required><br>
  <input type="submit" value="Insert Show">
</form>
<hr>

<h1>Shows List</h1>
<ul class="list-group">
  <% postData.forEach(function(show) { %>
    <li class="list-group-item">
      <strong>Title:</strong><%= show.title %><br>
      <strong>Genre:</strong><%= show.genre %><br>
      <strong>Rating:</strong><%= show.rating %><br>
      <strong>Platform:</strong><%= show.platform %><br>
      <strong>Watched:</strong><%= show.watched %><br>

      <form method="POST" action="/update/<%= show._id %>" class="d-inline">
          <button type="submit"  class= "btn btn-warning btn-sm" value="update">Update</button>
      </form>
      <form method="POST" action="/delete/<%= show._id %>" class="d-inline">
        <button type="submit"  class= "btn btn-danger btn-sm" value="update">Delete</button>
      </form>
    </li>
    <% }) %>
</ul>

<hr>