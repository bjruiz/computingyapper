<form method="POST" action="/insert" style="display: inline-block">
  <label for="newPost">Data:</label>
  <input id="newPost" name="newPost">
  <input type="submit" value="update">
</form>

<h3>my data posts</h3> 
 <% for (var i=0; i< postData.length; i++ ) { %>
  <form method="POST" action="/update/<%= postData[i]._id %>" style="display: inline-block">  
    <%= postData[i].post %> 
    <input type="submit" value="update"> 
  </form>
  <form method="POST" action="/delete/<%= postData[i]._id %>" style="display: inline-block">  
    <input type="submit" value="delete"> 
  </form>
  <br/>
<% } %>

