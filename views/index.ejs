  <main class="m-2 p-2 row">
    <div class="col-lg-8 offset-lg-2">
      <h2>
        Shows to Watch App
      </h2>
      <div class="mb-3">

        <button id="btnAddShow" class="btn btn-outline-dark" data-bs-toggle="modal" data-bs-target="#addShowModal">add
          show</button>

        <button id="btnShowAll" class="btn btn-dark btn-sm">Show all</button>
        <button id="btnHideAll" class="btn btn-dark btn-sm">Hide all</button>

        <button id="btnClearAll" class="btn btn-dark btn-sm">Clear All</button>

      </div>

      <!-- Modal -->
      <div id="addShowModal" class="modal fade" tabindex="-1" aria-labelledby="addShowModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Add New Show</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form action="/insert" method="POST">
              <div class="modal-body">
                <ul class="list-group">

                  <li class="input-group w-100">
                    <span class="w-20 input-group-text">Show Title</span>
                    <input id="showAddTitle" name="title" type="text" class="form-control" placeholder="Show Title">
                  </li>

                  <li class="input-group w-100">
                    <span class="w-20 input-group-text">Genre</span>
                    <input id="showAddGenre" name="genre" type="text" class="form-control" placeholder="Genre">
                  </li>

                  <li class="input-group w-100">
                    <span class="w-20 input-group-text">Rating</span>
                    <input id="showAddRating" name="rating" type="text" class="form-control" placeholder="Rating">
                  </li>

                  <li class="input-group w-100">
                    <span class="w-20 input-group-text">Platform</span>
                    <input id="showAddPlatform" name="platform" type="text" class="form-control" placeholder="Platform">
                  </li>

                  <li class="input-group w-100">
                    <span class="w-20 input-group-text">Watched?</span>
                    <input id="showAddWatched" name="watched" type="text" class="form-control" placeholder="Watched">
                  </li>

                </ul>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <input type="submit" class="btn btn-primary" value="Save Show">
              </div>
            </form>
          </div>
        </div>
      </div>

      <ul id="showsList" class="list-group">
        <% if(showsList.length > 0) { %>
          <% showsList.forEach(function(show) { %>
            <li class="list-group-item">
              <strong>Title:</strong>
              <input type="text" class="form-control editTitle" value="<%= show.title %>" readonly><br>
              <strong>Genre:</strong>
              <input type="text" class="form-control editGenre" value="<%= show.genre %>" readonly><br>
              <strong>Rating:</strong>
              <input type="text" class="form-control editRating" value="<%= show.rating %>" readonly><br>
              <strong>Platform:</strong>
              <input type="text" class="form-control editPlatform" value="<%= show.platform %>" readonly><br>
              <strong>Watched:</strong>
              <input type="text" class="form-control editWatched" value="<%= show.watched %>" readonly><br>

              <button class="btn btn-primary btn-sm editBtn" data-id="<%= show._id %>">Edit</button>
              <button class="btn btn-success btn-sm saveBtn" data-id="<%= show._id %>" style="display: none">Save</button>
              <form method="POST" action="/delete/<%= show._id %>" class="d-inline">
                <button type="submit" class="btn btn-danger btn-sm" value="update">Delete</button>
              </form>
            </li>
          <% }); %>
        <% } else { %>
        <li class="list-group-item"><i>No Shows Available</i></li>
        <% } %>
      </ul>
